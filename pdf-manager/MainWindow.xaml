<Window x:Class="pdf_manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pdf_manager" xmlns:syncfusion="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        MinWidth="1000"
        MinHeight="700"
        
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="12"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        
        Title="Pdf Manager" Height="700" Width="100" Closed="Window_Closed">

    <Window.Resources>
        <BitmapImage x:Key="icoFolder" UriSource="pack://application:,,,/pdf-manager;component/Resources/folder.ico"/>
        <BitmapImage x:Key="icoFile" UriSource="pack://application:,,,/pdf-manager;component/Resources/file.ico"/>
        <local:FileNameConverter x:Key="FileNameConverter" />
    </Window.Resources>

    <Grid>
        <!-- Main grid -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="0.5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <!-- End Main grid -->


        <!-- Tree Directory Grid -->
        <Grid Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="0.5*"/>
                <RowDefinition Height="12*"/>
            </Grid.RowDefinitions>

            <!-- Add and delete directory/file buttons Grid-->
            <Grid Grid.Column="0" Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <!--
                <Button
                  Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                  HorizontalAlignment="Left"
                  ToolTip="MaterialDesignFloatingActionMiniButton"
                  IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}">
                  <materialDesign:PackIcon
                    Kind="Alarm"
                    Height="{StaticResource IconSize}"
                    Width="{StaticResource IconSize}" />
                </Button>
                -->
                
                <Button 
                    Grid.Column="0" 
                    Grid.Row="0"
                    Click="ButtonAddDirectory_Click"
                    
                    Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                    HorizontalAlignment="Center"
                    ToolTip="Add new directory"
                    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                >
                    <materialDesign:PackIcon
                    Kind="CardPlus" />
                </Button>
                
                <Button 
                Grid.Column="1" 
                Grid.Row="0"
                Click="ButtonRemoveDirectory_Click"
                Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                HorizontalAlignment="Center"
                ToolTip="Remove selected directory"
                IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}" 
                >
                    <materialDesign:PackIcon
                    Kind="CardMinus" />
                </Button>

                <Button 
                Grid.Column="2" 
                Grid.Row="0"
                Click="ButtonAddSelectedTreeItems_Click"
                Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                HorizontalAlignment="Center"
                ToolTip="Add file to selected list"
                IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}" 
                >
                    <materialDesign:PackIcon
                    Kind="FilePlus" />
                </Button>

                <Button 
                Grid.Column="3" 
                Grid.Row="0"
                Click="ButtonRemoveSelectedTreeItems_Click"
                Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                HorizontalAlignment="Center"
                ToolTip="Remove file from selected list"
                IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}" 
                >
                    <materialDesign:PackIcon
                    Kind="Minus" />
                </Button>
            </Grid>
            <!-- End Add and delete directory/file buttons Grid-->

            <Viewbox Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Margin="2,2,2,2">Selected Directories:</TextBlock>
            </Viewbox>

            <Viewbox Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Margin="2,2,2,2">Selected Files:</TextBlock>
            </Viewbox>
            <TreeView
                Grid.Column="0" 
                Grid.Row="2"
                x:Name="DirectoryTreeView"
                ItemsSource="{Binding RootDirectoryItems}"
                Background="#fff"
            >
                <!--
                Setting up a TreeView style
                -->
                <TreeView.ItemContainerStyle>
                    <Style TargetType="{x:Type TreeViewItem}">
                        <Setter Property="FontFamily" Value="Bahnschrift Light Condensed" />
                        <Setter Property="FontSize" Value="12" />
                        <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}" />
                        <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />
                        <Setter Property="FontWeight" Value="Normal" />
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="FontFamily" Value="Bahnschrift Semmi Condensed" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TreeView.ItemContainerStyle>

                <TreeView.Resources>

                    <HierarchicalDataTemplate DataType="{x:Type local:ItDirectory}" ItemsSource="{Binding Items}">
                        <StackPanel Orientation="Horizontal" Height="20">
                            <Image Height="16" Width="16" Source="{StaticResource icoFolder}" Margin="0,0,5,0" />
                            <Label Content="{Binding Name}" />
                        </StackPanel>
                    </HierarchicalDataTemplate>
                    <DataTemplate DataType="{x:Type local:ItFile}">
                        <StackPanel Orientation="Horizontal" Height="20">
                            <Image Height="16" Width="16" Source="{StaticResource icoFile}" Margin="0,0,5,0" />
                            <Label Content="{Binding Name}" />
                        </StackPanel>
                    </DataTemplate>

                </TreeView.Resources>

            </TreeView>

            <ListView
                Grid.Column="2"
                Grid.Row="2"
                x:Name="SelectedItemsList" 
                
                Width="auto"
                Height="auto"
                Background="White"
                ItemsSource="{Binding Items}"
            >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Path=., Converter={StaticResource FileNameConverter}}" />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
        <!-- End Tree Directory Grid -->

        <!-- Workspace Grid -->

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="12.5*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <!-- Top panel grid -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*" />
                    <ColumnDefinition Width="0.6*" />
                    <ColumnDefinition Width="0.6*" />
                    <ColumnDefinition Width="0.6*" />
                    <ColumnDefinition Width="1.6*" />
                </Grid.ColumnDefinitions>

                <!-- ??? <Button Grid.Column="1" x:Name="preview" Content="Preview" Click="preview_Click"/> -->

                <TextBox x:Name="searching_word" 
                         TextWrapping="Wrap" 
                         Text="Enter Searching Text" 
                         GotFocus="searching_word_GotFocus" 
                         Grid.Column="0"
                         FontSize="15"
                         VerticalAlignment="Center" LostFocus="searching_word_LostFocus"
                />

                <Button 
                    Grid.Column="1" 
                    x:Name="searchButton_Copy" 
                    Click="button_Click"
                    
                    Style="{StaticResource MaterialDesignFloatingActionMiniDarkButton}"
                    ToolTip="Search text in selected files"
                    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                >
                    <materialDesign:PackIcon Kind="Magnify" />
                </Button>


                <Button x:Name="preview1" 
                        Click="preview_Click" 
                        Grid.Column="2"
                        
                    Style="{StaticResource MaterialDesignFloatingActionMiniDarkButton}"
                    ToolTip="Preview pdf file"
                    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                >
                    <materialDesign:PackIcon Kind="Eye" />
                </Button>


                <Button x:Name="clear" 
                        Click="clear_Click" 
                        Grid.Column="3"
                        
                        Style="{StaticResource MaterialDesignFloatingActionMiniDarkButton}"
                        ToolTip="Clear workspace"
                        IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                >
                    <materialDesign:PackIcon Kind="Eraser" />
                </Button>

                <CheckBox 
                    x:Name="case_sensitivity" 
                    Grid.Column="4"
                    FontSize="14"
                    Content="Case Sensitivity"
                />
            </Grid>
            
            <!-- Middle panel grid -->

            <Grid Grid.Row="1"
                  Margin="0,5,0,5">
                <syncfusion:CheckListBox x:Name="results" />
            </Grid>
            
            <!-- Bottom panel grid -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="1.3*" />
                    <ColumnDefinition Width="0.6*" />
                </Grid.ColumnDefinitions>
                
                <TextBox x:Name="userPath"
                         GotFocus="userPath_GotFocus"
                         
                         VerticalAlignment="Center"
                         Text="File name"
                         FontSize="14"
                         Margin="1,2,5,1" 
                         LostFocus="userPath_LostFocus"
                 >
                </TextBox>

                <TextBox x:Name="password" 
                         TextWrapping="Wrap" 
                         Text="Password" 
                         GotFocus="password_GotFocus" 
                         Grid.Column="1"
                         FontSize="14"
                         Margin="1,2,5,1"
                         VerticalAlignment="Center" 
                         LostFocus="password_LostFocus"
                />
                
                <CheckBox x:Name="passwordChecked" 
                          Content="User Password" 
                          RenderTransformOrigin="2.117,0.662" 
                          Grid.Column="2" 
                />

                <Button x:Name="savePreview" 
                        Click="savePreview_Click" 
                        Grid.Column="3" 
                        
                        Style="{StaticResource MaterialDesignFloatingActionMiniDarkButton}"
                        ToolTip="Save preview as pdf"
                        IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                >
                    <materialDesign:PackIcon Kind="ContentSave" />
                </Button>

            </Grid>
            
        </Grid>
        <!-- End Workspace Grid-->

        <!-- Tool panel Grid-->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <!--
            <Button
              Style="{StaticResource MaterialDesignRaisedDarkButton}"
              Width="{StaticResource ButtonWidth}"
              ToolTip="Resource name: MaterialDesignRaisedLightDarkButton"
              Content="_DARK"
              IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}" />
            -->

            <CheckBox HorizontalAlignment="Center" 
                    Grid.Row="0" 
                    x:Name="highlight" 
                    Content="Highlight"
                    FontSize="15"
             />

            <Button
                    HorizontalAlignment="Center" 
                    Grid.Row="1"
                    FontSize="14"
                    Width="130"
                    x:Name="mergeAllButton"
                    Click="mergeAllButton_Click"
                    VerticalAlignment="Top"
             >
                Merge All
            </Button>

            <Button Grid.Row="2"
                    HorizontalAlignment="Center" 
                    Grid.Column="0"
                    FontSize="14"
                    Width="130"
                    x:Name="mergeButton"
                    Click="mergeButton_Click"
                    VerticalAlignment="Top"
             >
                Merge Selected
            </Button>

            <Button Content="Encrypt File" 
                    Grid.Row="3"

                    VerticalAlignment="Top"
                    Margin="0,0,0,3"
                    FontSize="14"
                    Width="130"
                    x:Name="encrypt"
                    Click="encode_Click"
             />

            <TextBox x:Name="textEncryptPassword"
                     Margin="5,5,5,5"
                     VerticalAlignment="Bottom"
                     Grid.Row="3" 
                     TextWrapping="Wrap" 
                     Text="Insert"
                     MaxWidth="130"
                     MaxHeight="50"
                     FontSize="13"
                     GotFocus="textEncryptPassword_GotFocus"
                     LostFocus="textEncryptPassword_LostFocus"
             />

            <Button x:Name="decrypt" 
                    Content="Decrypt File"
                    Margin="0,3,0,3"
                    FontSize="14"
                    Width="130"
                    VerticalAlignment="Top"
                    Grid.Row="4" 
                    Click="decrypt_Click"
             />

            <TextBox x:Name="textDecryptPassword" 
                     Grid.Row="4"
                     Margin="5,5,5,5"
                     TextWrapping="Wrap" 
                     VerticalAlignment="Bottom"
                     Text="Insert"
                     MaxWidth="130"
                     MaxHeight="50"
                     FontSize="13"
                     GotFocus="textDecryptPassword_GotFocus"
                     LostFocus="textDecryptPassword_LostFocus"
             />

            <Button x:Name="passwordHistory" 
                    Content="Password History" 
                    Grid.Row="7"
                    Click="passwordHistory_Click"
                    FontSize="12"
                    Width="130"
             />

        </Grid>

        <!-- End Tool Panel Grid-->
    </Grid>
</Window>
