<Window x:Class="pdf_manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pdf_manager" xmlns:syncfusion="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        MinWidth="900"
        MinHeight="600"
        Title="Pdf Manager" Height="600" Width="900" Closed="Window_Closed">

    <Window.Resources>
        <BitmapImage x:Key="icoFolder" UriSource="pack://siteoforigin:,,,/icons/folder.ico"/>
        <BitmapImage x:Key="icoFile" UriSource="pack://siteoforigin:,,,/icons/file.ico"/>
        <local:FileNameConverter x:Key="FileNameConverter" />
    </Window.Resources>

    <Grid Background="#fcf9f7">
        <!-- Main grid -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="0.5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <!-- End Main grid -->


        <!-- Tree Directory Grid -->
        <Grid Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>

            <!-- Add and delete directory/file buttons Grid-->
            <Grid Grid.Column="0" Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <Button 
                Grid.Column="0" 
                Grid.Row="0"
                Margin="5,5,5,5"
                Click="ButtonAddDirectory_Click"
                >
                    + Dir
                </Button>
                <Button 
                Grid.Column="1" 
                Grid.Row="0"
                Margin="5,5,5,5"
                Click="ButtonRemoveDirectory_Click"
                >
                    - Dir
                </Button>

                <Button 
                Grid.Column="2" 
                Grid.Row="0"
                Margin="5,5,5,5"
                Click="ButtonAddSelectedTreeItems_Click"
                >
                    + File
                </Button>

                <Button 
                Grid.Column="3" 
                Grid.Row="0"
                Margin="5,5,5,5"
                Click="ButtonRemoveSelectedTreeItems_Click"
                >
                    - File
                </Button>
            </Grid>
            <!-- End Add and delete directory/file buttons Grid-->

            <Viewbox Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Margin="2,2,2,2">Selected Directories:</TextBlock>
            </Viewbox>

            <Viewbox Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Margin="2,2,2,2">Selected Files:</TextBlock>
            </Viewbox>
            <TreeView
                Grid.Column="0" 
                Grid.Row="2"
                x:Name="DirectoryTreeView"
                ItemsSource="{Binding RootDirectoryItems}"
            >
                <!--
                Setting up a TreeView style
                -->
                <TreeView.ItemContainerStyle>
                    <Style TargetType="{x:Type TreeViewItem}">
                        <Setter Property="FontFamily" Value="Bahnschrift Light Condensed" />
                        <Setter Property="FontSize" Value="10" />
                        <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}" />
                        <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />
                        <Setter Property="FontWeight" Value="Normal" />
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="FontFamily" Value="Bahnschrift Semmi Condensed" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TreeView.ItemContainerStyle>

                <TreeView.Resources>

                    <HierarchicalDataTemplate DataType="{x:Type local:ItDirectory}" ItemsSource="{Binding Items}">
                        <StackPanel Orientation="Horizontal" Height="20">
                            <Image Height="16" Width="16" Source="{StaticResource icoFolder}" Margin="0,0,5,0" />
                            <Label Content="{Binding Name}" />
                        </StackPanel>
                    </HierarchicalDataTemplate>
                    <DataTemplate DataType="{x:Type local:ItFile}">
                        <StackPanel Orientation="Horizontal" Height="20">
                            <Image Height="16" Width="16" Source="{StaticResource icoFile}" Margin="0,0,5,0" />
                            <Label Content="{Binding Name}" />
                        </StackPanel>
                    </DataTemplate>

                </TreeView.Resources>

            </TreeView>

            <ListView
                Grid.Column="2"
                Grid.Row="2"
                x:Name="SelectedItemsList" 
                
                Width="auto"
                Height="auto"
                Background="White"
                ItemsSource="{Binding Items}"
            >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Path=., Converter={StaticResource FileNameConverter}}" />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Button Click="ButtonAddSelectedTreeItems_Click" 
                    Grid.Row="3" 
                    Grid.Column="0" 
                    Grid.ColumnSpan="2"
                    Margin="4,4,4,4"
            >
                Dodaj wybrane pliki
            </Button>
        </Grid>
        <!-- End Tree Directory Grid -->

        <!-- Workspace Grid-->

        <!-- End Workspace Grid-->

        <!-- Tool panel Grid-->
        <Grid Grid.Column="2" Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <Button HorizontalAlignment="Center" 
                    VerticalAlignment="Top" 
                    Height="30" 
                    Grid.Column="0"
                    Margin="3,3,3,3"
                    Width="100"
                    
                    x:Name="mergeButton"
                    Click="mergeButton_Click"
             >
                Merge Selected
            </Button>

            <Button Grid.Column="0"
                    Grid.Row="1"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center" 
                    Margin="3,3,3,3"
                    Width="100"
                    
                    x:Name="mergeAllButton"
                    Click="mergeAllButton_Click"
             >
                Merge
            </Button>
        </Grid>
        <!-- End Tool Panel Grid-->

        <Button Grid.Column="0"
                    Grid.Row="8"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center" 
                    Margin="3,3,3,3"
                    Width="100"
                    
                    x:Name="saveSettingsButton"
                    Click="SaveSettingsButton_Click"
             >
            Save Settings
        </Button>

        <Button  Grid.Row="3" x:Name="preview" Content="Preview" Click="preview_Click" Margin="69,5,376,524" Grid.Column="1"/>
        <TextBox x:Name="searching_word" TextWrapping="Wrap" Width="124" Text="Enter Searching Text" FontWeight="Normal" HorizontalAlignment="Right" GotFocus="searching_word_GotFocus" Margin="0,5,247,524" Grid.Column="1"/>
        <CheckBox x:Name="case_sensitivity" Content="Case Sensitivity" Margin="272,10,124,528" Grid.Column="1"/>
        <Button x:Name="clear" Content="Clear" RenderTransformOrigin="0.5,0.5" Click="clear_Click" Grid.Column="1" Margin="390,5,78,525">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="0.951"/>
                    <RotateTransform/>
                    <TranslateTransform X="0.983"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button x:Name="savePreview" Content="Save Preview" Click="savePreview_Click" Margin="3,528,426,0" Grid.Column="1"/>
        <TextBox x:Name="userPath" TextWrapping="Wrap" Text="Insert Path" GotFocus="userPath_GotFocus" Margin="88,528,321,0" Grid.Column="1"/>
        <TextBox x:Name="password" TextWrapping="Wrap" Text="Insert Password" GotFocus="password_GotFocus" Margin="204,528,194,0" Grid.Column="1"/>
        <CheckBox x:Name="passwordChecked" Content="User Password" RenderTransformOrigin="2.117,0.662" Grid.Column="1" Margin="320,529,72,29" Grid.RowSpan="2"/>
        <Button x:Name="searchButton_Copy" Content="Search" Click="button_Click" Margin="3,5,450,524" Grid.Column="1" RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <syncfusion:CheckListBox x:Name="results" Grid.ColumnSpan="2" Margin="257,35,0,29"/>
        <Button x:Name="preview1" Content="Preview" Click="preview_Click" Margin="69,5,376,524" Grid.Column="1"/>

    <!-- End Tool Panel Grid-->
    </Grid>
</Window>
