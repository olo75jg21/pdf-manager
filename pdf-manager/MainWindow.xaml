<Window x:Class="pdf_manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pdf_manager" xmlns:syncfusion="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel LastChildFill="True" Margin="0,0,0,0">
        <ToolBar DockPanel.Dock="Top" Height="28" Header="">
            <Label>"Toolbar"</Label>
        </ToolBar>
        <ToolBar DockPanel.Dock="Bottom">
            <Label>"Footer"</Label>
        </ToolBar>
        <Grid DockPanel.Dock="Left" Margin="0,0,0,0" MinWidth="100" MaxWidth="200">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="20" />
                <RowDefinition Height="20" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Button Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Click="ButtonAddDirectory_Click">+</Button>
            <Button Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="2">-</Button>
            <TextBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"></TextBox>
            <Button Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="1" Height="20" VerticalAlignment="Top">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0*"/>
                        <RowDefinition Height="0*"/>
                    </Grid.RowDefinitions>
                </Grid>
            </Button>
            <TreeView Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="4"  x:Name="Drzewko"></TreeView>
        </Grid>
            <WrapPanel Background="Yellow" Margin="0,0,0,0">
            <Label>"Workspace"</Label>
            <Button x:Name="button" Content="Click" Height="26" Width="78" Click="button_Click"/>
            <Button x:Name="preview" Content="Preview" Height="26" Width="126" Click="preview_Click"/>
            <syncfusion:CheckListBox x:Name="results" Width="416" Height="330"/>
        </WrapPanel>
    </DockPanel>
</Window>
